<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Auto Spam Chat</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/message.js"></script>
</head>
<body>

  <div class="container">
      <div class="infomation">
          <img src="https://gaubong.us<%=user.image%>" alt="" width="35" height="35" style="border-radius: 50%">
          <span>Tên Tài Khoản:</span>
          <span style="color: rgb(255, 0, 255);"> <%=user.username%> </span>
          <span>Id website :<span>
          <span style="color: rgb(0, 204, 0);"> <%=user.Idweb%> </span>
          <span>Giới Tính:</span>
          <span style="color: rgb(204, 204, 0);"> <%=user.gender%> </span>
          <span>Lever :<span>
          <span style="color: rgb(255, 153, 0);"> <%=user.lever%> </span>
          <span>Tải Sản<span>
          <span> <%=user.taisan%> </span>
          <span style="color: rgb(255, 0, 0);"> <a href="/logout">Đăng Xuất</a> </span>
      </div>
    <header class="mt-5 text-center">
      <h1>Auto web</h1>
    </header>

    <div class="row mt-3">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <div class="content-left p-2">
              <h3 class="text-center">Danh Sách Nữ Online <span> <%=infomationfemaleOnline.length%></span></h3>
          </div>
          <div class="listonline" >
                <%infomationfemaleOnline.forEach((user)=>{ %>
                    <div class="item">
                  <div class="name"> <span> <img src="<%=user.img%>" alt="" width="30" height="30"> </span> <span >name :</span> <span style="color: rgb(255, 0, 255)"> <%=user.name%></span> <span style="color: #00cc00;"> ID :</span> <span class="feel"> <%=user.id%></span> <a href="https://gaubong.us/users/profile.php?user=<%=user.id%>" target="_blank">Chi Tiết</a> </div>
                  <div class="feeluser"> Feel: <span class="feel"><%=user.feel%></span> </div>
              </div>
                 <%})%>
              
          </div>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 p2">
          <div>
              <h2 class="text-center mt-2">Gửi Tin Nhắn</h2>
              <div class="form-group">
                <div>Nội Dung Tin Nhắn</div>
                <textarea name="contentmessage" id="contentmessage" cols="60" rows="5"></textarea>
              </div>
              <div class="custom-control custom-radio">
                  <div class="custom-control custom-radio custom-control-inline">
                      <input type="radio" class="custom-control-input" id="customRadio" name="typesend" value="1" checked>
                      <label class="custom-control-label" for="customRadio">Nữ</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                      <input type="radio" class="custom-control-input" id="customRadio2" name="typesend" value="2">
                      <label class="custom-control-label" for="customRadio2">Nam</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="customRadio3" name="typesend" value="3">
                        <label class="custom-control-label" for="customRadio3">Tất Cả</label>
                    </div>
              </div>
              <div class="form-group">
                <button type="button" class="btn btn-primary" onclick="sendmessage()">Gửi</button>
              </div>
            
              <div class="result-send">
                  <h2 class="mx-2">Thông Tin Gửi Yêu Cầu </h2>
                  <div><span>Tổng :</span> <span class="SumRequest"></span> <span>Hiện Tại :</span> <span class="numberNow">0</span> </div>
                  <div class="content-send">
                      <div class="message">Gửi Thành Công Tới</div>
                  </div>
              </div>
          </div>

      </div>
    </div>
    <div class="footer text-center mt-2">
        <h3>web design by  <a href="https://www.facebook.com/nam.havan.37051579" target="__blank">Nam</a></h3>
        <h4>Contact to <a href="https://www.facebook.com/nam.havan.37051579" target="__blank">facebook</a></h3>
    </div>
  </div>
</body>
  <style>
      .listonline{
        max-height: 600px;
        overflow-y: auto
      }
      .item {
        border: 1px solid black;
        padding: 5px;
        background-color: #6c757d4f;
        color: white;
      }
      .content-send{
        border:1px dotted black ;
        max-height: 300px;
        overflow-y: scroll;
        min-height: 300px;
        padding: 10px;
      }
      .SumRequest{
        color: red;
      }
      .idmessage{
        color: red
      }
      .message-sucess{
        margin: 5px 0px ;
        border: 1px solid green ;
      }
      .message-error{
        margin: 5px 0xp ;
        border: 1px solid red ;
      }
      .numberNow{
        color: #4CAF50;
      }
  </style>
      <script src="js/socket.js"></script>
</html>